# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
#trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespaces = false
insert_final_newline = true

[*.sh]
indent_style = tabs
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.js,*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
