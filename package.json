{
  "name": "loop-and-crash",
  "version": "1.5.0",
  "description": "An Express-based server that crashes and loops endlessly",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "snyk test && mocha --bail --check-leaks --inline-diffs --exit --no-timeouts",
    "prelint": "mdl README.md",
    "lint": "standard *.js lib/*.js test/*.js",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withmethod/loop-and-crash.git"
  },
  "keywords": [
    "crash",
    "express",
    "withmethod"
  ],
  "author": "Kerim Satirli <kerim@withmethod.com>",
  "license": "Apache-2.0",
  "bin": {
    "loop-and-crash": "./bin/runner.js"
  },
  "bugs": {
    "url": "https://github.com/withmethod/loop-and-crash/issues"
  },
  "engines": {
    "node" : ">=6 <9"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  },
  "homepage": "https://github.com/withmethod/loop-and-crash#readme",
  "dependencies": {
    "express": "^4.16.1",
    "wingcss": "^1.0.0-beta"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "mocha": "^5.0.0",
    "snyk": "^1.69.3",
    "standard": "^10.0.3"
  }
